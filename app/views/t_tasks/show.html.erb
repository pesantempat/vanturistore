<%= render 'layouts/header'%>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h5 class="m-0 text-dark">Task</h5>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%=home_index_path%>">Home</a></li>
            <li class="breadcrumb-item active">Task</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
              <p>
                <strong>Nama task:</strong>
                <%= @t_task.nama_task %>
              </p>

              <p>
                <strong>Description:</strong>
                <%= @t_task.description %>
              </p>

              <p>
                <% if (@t_task.rupiah != nil) %>
                  <strong>Target Pilihan Rupiah:</strong>
                  <%= number_to_currency_rupiah (@t_task.rupiah) %>
                <% elsif (@t_task.presentase != nil) %>
                  <strong>Target Pilihan Persentase:</strong>
                  <%= @t_task.presentase %>%
                <% elsif (@t_task.waktu != "") %>
                  <strong>Target Pilihan Waktu:</strong>  
                  <%= @t_task.waktu %>
                <% elsif (@t_task.frekuensi != "") %>
                  <strong>Target Pilihan Frekuensi:</strong>
                  <%= @t_task.frekuensi %>
                <%end%>
              </p>

              <p>
                <strong>Tingkat kesulitan:</strong>
                <%= @t_task.tingkat_kesulitan %>
              </p>
              <%= link_to 'Back', t_tasks_path, :class =>"btn-sm btn-danger" %>    
      </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%= render 'layouts/footer'%> 

