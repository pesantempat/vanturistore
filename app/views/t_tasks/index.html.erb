<%= render 'layouts/header'%>
<style>
  th {
    font-size: 14px;
  }

  td {
    font-size: 13px;
  }
</style>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h5 class="m-0 text-dark">Data Task</h5>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%=home_index_path%>">Home</a></li>
            <li class="breadcrumb-item active">Data Task</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Data Task</h3>
                <%= link_to 'New Task', new_t_task_path, :class =>"btn-sm btn-primary", :style =>"float:right;" %>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Nama task</th>
                      <th>Description</th>
                      <th>Target Pilihan</th>
                      <th>Tingkat kesulitan</th>
                      <th style="min-width: 143px"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @t_tasks.each do |t_task| %>
                      <tr>
                        <td><%= t_task.nama_task %></td>
                        <td><%= t_task.description %></td>
                        <td>
                        <% if (t_task.rupiah != nil) %>
                          <%= number_to_currency_rupiah (t_task.rupiah) %>
                        <% elsif (t_task.presentase != nil) %>
                          <%= t_task.presentase %>%
                        <% elsif (t_task.waktu != "") %>  
                          <%= t_task.waktu %>
                        <% elsif (t_task.frekuensi != "") %>
                          <%= t_task.frekuensi %>
                        <% else %>
                          0 
                        <%end%> 
                        </td>
                        <td><%= t_task.tingkat_kesulitan %></td>
                        <td><%= link_to 'Show', t_task, :class =>"btn-sm btn-info" %>
                        <%= link_to 'Edit', edit_t_task_path(t_task), :class =>"btn-sm btn-primary" %>
                        <%= link_to 'Destroy', t_task, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn-sm btn-danger" %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
    });
  });
</script>

<%= render 'layouts/footer'%>

