<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================--> 
  <%= favicon_link_tag asset_path('favicon.ico') %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'bootstrap.min' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'font-awesome.min' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'icon-font.min' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'animate' %>
<!--===============================================================================================-->  <%= stylesheet_link_tag    'hamburgers.min' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'animsition.min' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'select2.min' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'daterangepicker' %>
<!--===============================================================================================-->
  <%= stylesheet_link_tag    'util' %>
  <%= stylesheet_link_tag    'main' %>
<!--===============================================================================================-->
</head>
<body>
  
  <div class="limiter">
    <div class="container-login100" style="background-image: url('/assets/bg-02.jpg');">
      <div class="wrap-login100 p-t-30 p-b-50">
        <span class="login100-form-title p-b-41">
          Login
        </span>

        <div class="login100-form validate-form p-b-33 p-t-5">
        <%= form_for( resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="wrap-input100 validate-input" data-validate = "Enter username">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"input100", :placeholder =>"Email" %>
            <span class="focus-input100" data-placeholder="&#xe82a;"></span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Enter password">
            <%= f.password_field :password, autocomplete: "current-password", :class =>"input100", :placeholder =>"Password" %>
            <span class="focus-input100" data-placeholder="&#xe80f;"></span>
          </div><br>
            <% if devise_mapping.rememberable? %>
              <div class="field" style="padding-left: 10px;">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

          <div class="container-login100-form-btn m-t-32">
            <button class="login100-form-btn">
               <%= f.submit "LOGIN",:style =>"background:transparent; color:#fff" %>
            </button>
          </div>
          <%#= render "users/shared/links" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  

  <div id="dropDownSelect1"></div>
  
<!--===============================================================================================-->
  <%= javascript_include_tag 'animsition.min' %>
<!--===============================================================================================-->
  <%= javascript_include_tag 'popper' %>
  <%= javascript_include_tag 'bootstrap.min' %>
<!--===============================================================================================-->
  <%= javascript_include_tag 'select2.min' %>
<!--===============================================================================================-->
  <%= javascript_include_tag 'countdowntime' %>
<!--===============================================================================================-->
  <%= javascript_include_tag 'main' %>

</body>
</html>
