<div id="booking" class="section">
    <div class="section-center">
      <div class="container">
          <% if alert %>
          <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
              <%= alert %>
          </div>
        <% elsif notice %>
          <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
              <%= notice %>
          </div>
        <% end %>
        <% resource.errors.full_messages.each do |message| %>
          <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
              <%= message %>
          </div>
        <% end %> 
        <%#= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-md-12">
            <div class="booking-cta">
              <h2>Join Our Program</h2>
            </div>
          </div>  
          <div class="col-md-12 col-md-offset-1"> 
            <div class="booking-form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.text_field :name_customer, :class =>"form-control", :required => true, :autofocus => true, :autocomplete =>"name_customer" %>
                      <span class="form-label">Nama</span>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.email_field :email, :class =>"form-control", :required => true, :autofocus => true, :autocomplete =>"email" %>
                      <span class="form-label">Email</span>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="row">
                      <div class="col-md-1">  
                        <input class="form-control" style="width: 30px;" value="+62" type="text">
                      </div>
                      <div class="col-md-10">
                        <div class="form-group">
                          <%= f.text_field :phone_customer, :class =>"form-control", pattern:"[0-9]+", oninvalid:"this.setCustomValidity('Inputan Harus Angka')", oninput:"setCustomValidity('')", :required => true, :autofocus => true, :autocomplete =>"phone_customer", :maxlength =>"11" %>
                          <span class="form-label">Nomor Handphone</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.date_field :brithday_customer, :class =>"form-control", default: Time.zone.now, :required => true %>
                      <span class="form-label">Tanggal Lahir</span>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.password_field :password, :class =>"form-control", :required => true, :autocomplete =>"new-password" %>
                      <span class="form-label">Password</span>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, :class =>"form-control", :required => true, :autocomplete =>"new-password" %>
                      <span class="form-label">Password Confirmation</span>
                    </div>
                  </div>
                </div>
                <div class="form-btn">
                  <%= f.submit "Join Our Program", :class =>"submit-btn" %>
                </div>
              <%end%>
              <%= render "customers/shared/links" %>
              <%#= link_to "Log in with Facebook", customer_facebook_omniauth_authorize_path, method: :post %>
              <!--<a rel="nofollow" data-method="post" href="/customers/auth/facebook">
                <button class="loginBtn loginBtn--facebook">
                  Login with Facebook
                </button>
              </a>-->
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>

