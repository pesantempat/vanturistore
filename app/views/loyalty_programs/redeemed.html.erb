<%= render 'layouts/headercustomer'%>
<style>
  th {
    font-size: 14px;
  }

  td {
    font-size: 13px;
  }

  .btn-primary {
    color: #07a99c !important;
    background-color: #fff !important;
    border-color: #007bff;
  }
</style>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%=home_index_path%>">Home</a></li>
            <li class="breadcrumb-item active">Redeemed Point</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Redeemed Point</h3>
                <h3 class="card-title" style="float: right;"> My Point:&nbsp;<%= @loyalty_point.point_customer%></h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <div class="table-responsive">
                <table id="example" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th style="min-width: 200px; text-align: center;">Reward</th>
                    <th style="text-align: center;">Point</th>
                    <th style="text-align: center; ">End</th>
                    <th style="text-align: center;">Expired</th>
                    <th style="text-align: center; min-width: 160px;">Syarat & Ketentuan</th>
                    <th style="text-align: center;">Rendeem Point</th>
                  </tr>
                  </thead>
                  <tbody>
                   <% @loyalty_programs.each do |loyalty_program| %>
                  <tr>
                    <td><%= loyalty_program.reward.reward_name %></td>
                    <td style="text-align: center;"><%= loyalty_program.point_loyalty %></td>
                    <td><%= loyalty_program.end_loyalty.strftime("%d/%m/%Y") %></td>
                    <td><%= loyalty_program.date_expired%> Hari</td>
                    <td><%= loyalty_program.keterangan_loyalty %></td>
                    <% if loyalty_program.end_loyalty >= Date.today - 1.day %>
                    <td> <% if @loyalty_point.point_customer >= loyalty_program.point_loyalty %>
                          <%= link_to "Redeem points for this reward",
                                      customer_loyalty_point_loyalty_point_transactions_path(current_customer.id, @loyalty_point.id, :trans_type => "redeemed-point", :loyalty_program_id => loyalty_program.id),
                                      class: "btn btn-primary",
                                      :method => :post %>            
                        <% else %>
                          <button type="button" class="btn btn-primary" disabled="disabled">Not enough points</button>
                        <% end %>
                    </td>
                    <%else%>
                    <td style="text-align: center;"><button type= "button" class="btn btn-primary" disabled="disabled">Expired</button></td> 
                    <%end%>
                   </tr>
                <% end %>
                  </tbody>
                </table>
              </div><br>
                <%= link_to 'Back', :back, :class =>"btn-sm btn-danger" %>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.flash.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.print.min.js"></script>


<script>
  $(document).ready(function() {
    $('#example').DataTable( {
    } );
} );
</script>

