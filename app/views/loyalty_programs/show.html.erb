<%= render 'layouts/header'%>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%=home_index_path%>">Home</a></li>
            <li class="breadcrumb-item active">Program Loyalty</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
        <p>
          <strong>Point Loyalty:</strong>
          <%= @loyalty_program.point_loyalty %>
        </p>
        <p>
          <strong>Start Loyalty:</strong>
          <%= @loyalty_program.start_loyalty.strftime("%d/%m/%Y") %>
        </p>
        <p>
          <strong>End Loyalty:</strong>
          <%= @loyalty_program.end_loyalty.strftime("%d/%m/%Y") %>
        </p>
        <p>
          <strong>Status Loyalty:</strong>
          <%= @loyalty_program.status_loyalty %>
        </p>
        <p>
          <strong>Keterangan Loyalty:</strong>
          <%= @loyalty_program.keterangan_loyalty %>
        </p>
        <p>
          <strong>Reward:</strong>
          <%= @loyalty_program.reward.reward_name %>
        </p>

        <%= link_to 'Back', t_mitra_loyalty_programs_path(@t_mitra, @t_reservasi), :class =>"btn-sm btn-danger" %>
      </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%= render 'layouts/footer'%> 

