<%= render 'layouts/header'%>
<style>
  th {
    font-size: 14px;
  }

  td {
    font-size: 13px;
  }

  .btn-primary {
    color: #07a99c !important;
    background-color: #fff !important;
    border-color: #007bff;
  }
</style>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
        </div><!-- /.col -->
        <div class="col-sm-6">
          
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Data Loyalty Reward</h3>
                <%= link_to 'Tambah Loyalty Reward',new_t_mitra_loyalty_program_path, class:"btn-sm btn-primary float-right" %>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <div class="table-responsive">
                <table id="example" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th style="min-width: 200px; text-align: center;">Reward</th>
                    <th style="text-align: center;">Point loyalty</th>
                    <th style="text-align: center;">Start loyalty</th>
                    <th style="text-align: ">End loyalty</th>
                    <th style="text-align: center;">Status loyalty</th>
                    <th style="text-align: center; min-width: 160px;">Keterangan loyalty</th>
                    <th style="min-width: 75px;"></th>
                  </tr>
                  </thead>
                  <tbody>
                   <% @loyalty_programs.each do |loyalty_program| %>
                  <tr>
                    <td><%= loyalty_program.reward.reward_name %></td>
                    <td style="text-align: center;"><%= loyalty_program.point_loyalty %></td>
                    <td><%= loyalty_program.start_loyalty.strftime("%d/%m/%Y") %></td>
                    <td><%= loyalty_program.end_loyalty.strftime("%d/%m/%Y") %></td>
                    <td style="text-align: center;"><%= loyalty_program.status_loyalty %></td>
                    <td><%= loyalty_program.keterangan_loyalty %></td>
                    <td><%= link_to 'Show', t_mitra_loyalty_program_path(@t_mitra,loyalty_program), :class =>"btn-sm btn-info" %>
                    <%= link_to 'Edit', edit_t_mitra_loyalty_program_path(loyalty_program.t_mitra, loyalty_program), :class =>"btn-sm btn-success" %>
                    <%#= link_to 'Destroy', t_mitra_loyalty_program_path(loyalty_program.t_mitra, loyalty_program), method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn-sm btn-danger" %></td>
                   </tr>
                <% end %>
                  </tbody>
                </table>
              </div><br>
                <%= link_to 'Back', :back, :class =>"btn-sm btn-danger" %>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.flash.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.print.min.js"></script>


<script>
  $(document).ready(function() {
    $('#example').DataTable( {
      "order": [[ 1, "asc" ]]
    } );
} );
</script>

<%= render 'layouts/footer'%>



