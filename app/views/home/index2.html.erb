<%= render 'layouts/headercustomer'%>
<style>
  th {
    font-size: 14px;
  }

  td {
    font-size: 13px;
  }

  .btn-primary {
    color: #fff !important;
    background-color: #07a99c !important;
    border-color: #007bff;
    width: 100%;
  }
</style>
<%= stylesheet_link_tag "logincustomer.css" %>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <!-- Widget: user widget style 1 -->
            <% @t_mitras.each do |t_mitra| %>
            <div class="card card-widget widget-user">
              <!-- Add the bg color to the header using any of the bg-* classes -->
              <div class="widget-user-header bg-info1">
                <h3 class="widget-user-username"><%= t_mitra.nama_mitra %></h3>
                <h5 class="widget-user-desc">Join ke program kami dan dapatkan berbagai rewards menarik</h5>
              </div>
              <div class="widget-user-image">
                <!--<img class="img-circle elevation-2" src="../dist/img/user1-128x128.jpg" alt="User Avatar">-->
              </div>
              <div class="card-footer">
                <div class="row">
                  <div class="col-sm-12 border-right">
                    <div class="description-block">
                      <% if loyalty_point = @loyalty_points.find_by(customer_id: current_customer.id, t_mitra_id: t_mitra.id) %>
                        <%= link_to "View My Loyalty Point", customer_mypoint_path(current_customer.id), class: "btn btn-primary btn-sm"%>
                        <% else %>
                          <%= link_to "Join Program Loyalty",
                                      customer_loyalty_points_path(current_customer.id, :t_mitra_id => t_mitra.id, :customer_id => current_customer.id), class: "btn btn-success btn-sm", class: "btn btn-primary btn-sm", :method => :post %>
                        <% end %>
                    </div>
                    <!-- /.description-block -->
                  </div>
                </div>
                <!-- /.row -->
              </div>
            </div>
            <!-- /.widget-user -->
            <%end%>
          </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%= render 'layouts/footercustomer'%>



