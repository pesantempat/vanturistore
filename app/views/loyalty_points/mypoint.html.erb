<%= render 'layouts/headercustomer'%>
<style>
  th {
    font-size: 14px;
  }

  td {
    font-size: 13px;
  }

  .btn-primary {
    color: #07a99c !important;
    background-color: #fff !important;
    border-color: #007bff;
  }
</style>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%=home_index_path%>">Home</a></li>
            <li class="breadcrumb-item active">Data Loyalty Program</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Data Loyalty Program</h3>
                <%#= link_to 'Tambah Loyalty Program',new_t_mitra_loyalty_program_path, class:"btn-sm btn-primary float-right" %>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
              <div class="table-responsive">
                  <table id="example" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                      <th style="min-width: 200px; text-align: center;">Nama Restaurant / Cafe</th>
                      <th style="min-width: 140px;text-align: center;">My Loyalty Point</th>
                      <th style="text-align: center;">Rendeem Point</th>
                      <th style="text-align: center;">History Point</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @loyalty_points.each do |loyalty_point| %>
                      <% ptrans = LoyaltyPointTransaction.find_by(loyalty_point_id: loyalty_point.id, trans_type: "get-point") %>
                      <% reward_ptrans = LoyaltyPointTransaction.find_by(loyalty_point_id: loyalty_point.id, trans_type: "redeemed-point") %>
                      <% @t_mitra = loyalty_point.t_mitra %>
                      <tr>
                        <td>
                          <strong><%= loyalty_point.t_mitra.nama_mitra %></strong>
                        </td>
                        <td style="text-align: center;"><%= loyalty_point.point_customer %></td>
                        <td>
                          <%= link_to "Redeem Point", t_mitra_redeemed_path(loyalty_point.t_mitra_id), class: "btn btn-primary btn-sm" %>
                        
                        </td>
                        <td>
                          <%= link_to "History Point",  customer_loyalty_point_url(current_customer.id, loyalty_point.id), class: "btn btn-success btn-sm" %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
              </div><br>
                <%= link_to 'Back', :back, :class =>"btn-sm btn-danger" %>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.flash.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.print.min.js"></script>


<script>
  $(document).ready(function() {
    $('#example').DataTable( {
    } );
} );
</script>

