<%= render 'layouts/header'%>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h5 class="m-0 text-dark">Data Mitra</h5>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="<%=home_index_path%>">Home</a></li>
            <li class="breadcrumb-item active">Data Mitra</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <%flash.each do |name, msg| %> 
              <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss = "alert" aria-label="close">x</a>
                <%= notice %>
              </div>
            <% end %>
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
				<p>
				  <strong>Nama Mitra:</strong>
				  <%= @t_mitra.nama_mitra %>
				</p>

				<p>
				  <strong>Alamat:</strong>
				  <%= @t_mitra.alamat %>
				</p>

				<p>
				  <strong>Telp:</strong>
				  <%= @t_mitra.telp %>
				</p>

        <p>
          <strong>Akun Login</strong>
          <%= @t_mitra.user.email %>
        </p>
        <% if current_user.mitra? %>
				<%= link_to 'Back', home_index_path, :class =>"btn-sm btn-danger" %> | <%#= link_to 'Create Task', new_t_mitra_t_task_path(@t_mitra), :class =>"btn-sm btn-info" %>
        <%end%>
			</div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%= render 'layouts/footer'%>	
